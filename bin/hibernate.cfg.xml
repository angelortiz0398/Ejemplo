<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">Bases2021</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tienda</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.search.autoregister_listeners">true</property>
  <property name="hibernate.validator.apply_to_ddl">false</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.default_entity_mode">pojo</property>
  <mapping class="entidades.Articulo" package="entidades"/>
  <mapping class="entidades.Categoria" package="entidades"/>
  <mapping class="entidades.DetalleIngreso" package="entidades"/>
  <mapping class="entidades.DetalleVenta" package="entidades"/>
  <mapping class="entidades.Ingreso" package="entidades"/>
  <mapping class="entidades.Persona" package="entidades"/>
  <mapping class="entidades.Rol" package="entidades"/>
  <mapping class="entidades.Usuario" package="entidades"/>
  <mapping class="entidades.Venta" package="entidades"/>
 </session-factory>
</hibernate-configuration>
